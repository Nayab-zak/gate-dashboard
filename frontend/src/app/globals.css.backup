}

aside { 
  background: var(--theme-header-gradient, linear-gradient(to bottom, #3C2E8F, #2B2C7A, #002F6C));
  border-radius: 1rem;
  padding: 1rem;
  transition: all 0.3s ease-in-out;
}

/* Control Panel (Sidebar) Styles - Always gradient, white text */
.sidebar-button,
.sidebar-nav-item,
.control-panel-item {
  background: transparent;
  color: #FFFFFF;
  padding: 0.75rem 1rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease-in-out;
  cursor: pointer;
  border: none;
  text-align: left;
  width: 100%;
}

/* Hover effects for control panel items */
.sidebar-button:hover,
.sidebar-nav-item:hover,
.control-panel-item:hover {
  background: #00A859; /* Green background on hover */
  color: #FFFFFF; /* Keep text white */
  transform: translateX(2px);
}

/* Active/selected state for control panel items */
.sidebar-button.active,
.sidebar-nav-item.active,
.control-panel-item.active {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
  color: #FFFFFF;
}

/* Dark mode specific control panel hover - gradient highlight with green outline */
.dark .sidebar-button:hover,
.dark .sidebar-nav-item:hover,
.dark .control-panel-item:hover {
  background: linear-gradient(135deg, rgba(60, 46, 143, 0.8) 0%, rgba(43, 44, 122, 0.8) 50%, rgba(0, 47, 108, 0.8) 100%);
  border: 1px solid #00A859;
  color: #FFFFFF;
}

/* Light mode specific control panel hover - same green background */
.light .sidebar-button:hover,
.light .sidebar-nav-item:hover,
.light .control-panel-item:hover {
  background: #00A859;
  color: #FFFFFF;
}

/* Grid System Utilities - Prevent overlaps and ensure consistent spacing */
.dashboard-grid {
  display: grid;
  gap: 1.5rem;
  grid-template-columns: repeat(12, 1fr);
}

.dashboard-card {
  background-color: #002F6C;
  border-radius: 1rem;
  padding: 1.5rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  /* Ensure cards maintain their grid position */
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

/* Prevent content overflow that could cause visual stacking */
.dashboard-card-content {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* Grid responsive behavior */
@media (max-width: 1024px) {
  .dashboard-grid {
    gap: 1rem;
  }
  
  .dashboard-card {
    padding: 1rem;
  }
}

/* Ensure consistent section spacing */
.dashboard-section {
  margin-bottom: 2rem;
}

/* Force proper grid behavior - prevent floating or overlapping */
.grid-container {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  gap: 1.5rem; /* 24px */
  width: 100%;
}

/* Ensure cards respect their grid boundaries */
.grid-item {
  position: relative;
  display: flex;
  flex-direction: column;
  min-height: 0;
  min-width: 0;
}

/* Additional Grid Stability Rules - Pure CSS to prevent any overlapping */
.dashboard-container {
  width: 100%;
  max-width: 100%;
  overflow-x: hidden;
  position: relative;
  transform: translateZ(0);
  will-change: scroll-position;
}

.dashboard-row {
  width: 100%;
  margin-bottom: 2rem;
  clear: both;
  overflow: hidden;
  position: relative;
  z-index: auto;
}

.grid-12-col {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  gap: 1.5rem;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  transition: all 0.2s ease-in-out;
}

/* Grid column spans */
.grid-col-12 { 
  grid-column: span 12; 
  width: 100%;
  min-width: 0;
}
.grid-col-8 { 
  grid-column: span 8; 
  width: 100%;
  min-width: 0;
}
.grid-col-6 { 
  grid-column: span 6; 
  width: 100%;
  min-width: 0;
}
.grid-col-4 { 
  grid-column: span 4; 
  width: 100%;
  min-width: 0;
}
.grid-col-3 { 
  grid-column: span 3; 
  width: 100%;
  min-width: 0;
}
.grid-col-2 { 
  grid-column: span 2; 
  width: 100%;
  min-width: 0;
}

/* Responsive overrides - Stack on smaller screens */
@media (max-width: 1024px) {
  .grid-col-8,
  .grid-col-6,
  .grid-col-4,
  .grid-col-3,
  .grid-col-2 {
    grid-column: span 12;
  }
  
  .grid-12-col {
    gap: 1rem;
  }
  
  .dashboard-row {
    margin-bottom: 1.5rem;
  }
}

/* Prevent any floating or absolute positioning issues */
.dashboard-card-wrapper {
  position: relative;
  width: 100%;
  height: auto;
  min-height: 0;
  box-sizing: border-box;
  contain: layout;
  display: flex;
  flex-direction: column;
  z-index: 1;
  transition: all 0.2s ease-in-out;
}

/* Force cards to stay within their grid bounds */
.card-content {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  flex: 1;
  min-height: 0;
  transition: all 0.2s ease-in-out;
}

/* Ensure no elements can break out of their containers */
.dashboard-card-wrapper > * {
  max-width: 100%;
  box-sizing: border-box;
}

/* Fix any potential z-index stacking issues */
.dashboard-card-wrapper .bg-dp-navy {
  position: relative;
  z-index: 1;
}

/* Additional safeguards for chart containers */
.chart-container {
  width: 100% !important;
  height: 100% !important;
  overflow: hidden;
  position: relative;
}

.chart-container > div,
.chart-container canvas,
.chart-container svg {
  max-width: 100% !important;
  max-height: 100% !important;
}

/* DatePicker Custom Styling */
.react-datepicker__input-container input {
  background-color: #0E2F51;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 0.375rem;
  padding: 0.5rem 0.75rem;
  color: white;
}

.react-datepicker__input-container input::placeholder {
  color: #B3B3B3;
  opacity: 0.7;
}

.react-datepicker__input-container input:focus {
  border-color: #0B4FA7;
  outline: none;
}

/* DatePicker dropdown styling */
.react-datepicker {
  background-color: #0E2F51;
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
}

.react-datepicker__header {
  background-color: #002F6C;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.react-datepicker__current-month,
.react-datepicker__day-name {
  color: white;
}

.react-datepicker__day {
  color: white;
}

.react-datepicker__day:hover {
  background-color: #0B4FA7;
}

.react-datepicker__day--selected {
  background-color: #0B4FA7;
  color: white;
}

.react-datepicker__time-container {
  background-color: #0E2F51;
  border-left: 1px solid rgba(255, 255, 255, 0.2);
}

.react-datepicker__time-list-item {
  color: white;
}

.react-datepicker__time-list-item:hover {
  background-color: #0B4FA7;
}

.react-datepicker__time-list-item--selected {
  background-color: #0B4FA7;
  color: white;
}

/* Debug utilities for grid troubleshooting - can be removed in production */
.debug-grid {
  background-image: 
    linear-gradient(to right, rgba(255,0,0,0.1) 0%, transparent 1px),
    linear-gradient(to bottom, rgba(255,0,0,0.1) 0%, transparent 1px);
  background-size: calc(100%/12) 1px, 1px 24px;
}

.debug-card {
  border: 1px dashed rgba(255,255,0,0.3) !important;
}

/* Final safeguard against any content overflow */
.bg-dp-navy * {
  max-width: 100%;
  box-sizing: border-box;
}

/* Adaptive Card System - Dynamic Heights Based on Content */

/* Base adaptive card - grows to fit content */
.adaptive-card {
  min-height: 320px; /* Minimum height to prevent too small cards */
  height: auto; /* Allow natural height growth */
  display: flex;
  flex-direction: column;
}

/* Medium height cards for complex visualizations */
.adaptive-card-medium {
  min-height: 400px;
}

/* Large height cards for detailed charts */
.adaptive-card-large {
  min-height: 500px;
}

/* Card content that adapts to its container */
.adaptive-card .card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  overflow: hidden;
}

/* Ensure chart containers fill their adaptive cards properly */
.adaptive-card .chart-container,
.adaptive-card .echarts-for-react {
  flex: 1;
  min-height: 0;
  width: 100% !important;
  height: 100% !important;
}

/* Row-based adaptive heights - all cards in a row match the tallest */
.adaptive-row {
  display: grid;
  align-items: stretch; /* Stretch all children to match tallest */
}

.grid-12-col.adaptive-row {
  align-items: stretch;
}

.grid-12-col .adaptive-card {
  height: 100%; /* Fill the grid cell completely */
}

/* Responsive adaptive heights */
@media (min-width: 1280px) {
  .adaptive-card {
    min-height: 400px;
  }
  
  .adaptive-card-medium {
    min-height: 480px;
  }
  
  .adaptive-card-large {
    min-height: 600px;
  }
}

@media (min-width: 1536px) {
  .adaptive-card {
    min-height: 450px;
  }
  
  .adaptive-card-medium {
    min-height: 520px;
  }
  
  .adaptive-card-large {
    min-height: 650px;
  }
}

/* Prevent content overflow in adaptive cards */
.adaptive-card .overflow-content {
  overflow-y: auto;
  overflow-x: hidden;
  max-height: 100%;
}

/* Special handling for title + chart combinations */
.adaptive-card .card-header {
  flex-shrink: 0;
  margin-bottom: 1rem;
}

.adaptive-card .card-body {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

/* Force chart libraries to respect container bounds */
.adaptive-card .echarts-for-react,
.adaptive-card canvas,
.adaptive-card svg {
  max-width: 100% !important;
  max-height: 100% !important;
  width: 100% !important;
  height: 100% !important;
}

/* Debug helper - can be removed in production */
.debug-adaptive {
  border: 2px dashed rgba(255, 255, 0, 0.5) !important;
  position: relative;
}

.debug-adaptive::before {
  content: attr(data-height);
  position: absolute;
  top: 2px;
  right: 2px;
  background: rgba(255, 255, 0, 0.8);
  color: black;
  padding: 2px 6px;
  font-size: 10px;
  z-index: 1000;
}

/* Advanced Responsive Grid System for Dashboard */

/* Responsive adaptive heights based on viewport */
@media (min-width: 768px) and (max-width: 1023px) {
  .adaptive-card {
    min-height: 350px;
  }
  
  .adaptive-card-medium {
    min-height: 420px;
  }
  
  .adaptive-card-large {
    min-height: 480px;
  }
  
  /* Stack cards vertically on tablets */
  .grid-12-col .grid-col-8,
  .grid-12-col .grid-col-6,
  .grid-12-col .grid-col-4 {
    grid-column: span 12;
  }
}

/* Mobile responsive improvements */
@media (max-width: 767px) {
  .adaptive-card {
    min-height: 300px;
  }
  
  .adaptive-card-medium {
    min-height: 350px;
  }
  
  .adaptive-card-large {
    min-height: 400px;
  }
  
  /* Reduce padding on mobile */
  .dashboard-card-wrapper .bg-dp-navy {
    padding: 1rem;
  }
  
  /* Smaller gaps on mobile */
  .grid-12-col {
    gap: 0.75rem;
  }
  
  .dashboard-row {
    margin-bottom: 1.5rem;
  }
}

/* Ultra-wide screen optimizations */
@media (min-width: 1920px) {
  .adaptive-card {
    min-height: 500px;
  }
  
  .adaptive-card-medium {
    min-height: 580px;
  }
  
  .adaptive-card-large {
    min-height: 700px;
  }
}

/* Content-aware height adjustments */
.adaptive-card.has-header {
  min-height: calc(var(--min-height, 320px) + 60px);
}

.adaptive-card.has-controls {
  min-height: calc(var(--min-height, 320px) + 80px);
}

/* Dynamic height calculation utilities */
.height-auto {
  height: auto !important;
  min-height: 320px;
}

.height-content {
  height: fit-content !important;
  min-height: 280px;
}

/* Chart container aspect ratio preservation */
.chart-aspect-16-9 {
  aspect-ratio: 16 / 9;
  min-height: 300px;
}

.chart-aspect-4-3 {
  aspect-ratio: 4 / 3;
  min-height: 280px;
}

.chart-aspect-square {
  aspect-ratio: 1 / 1;
  min-height: 300px;
}

/* Improved grid item alignment */
.grid-item-top {
  align-self: start;
}

.grid-item-center {
  align-self: center;
}

.grid-item-stretch {
  align-self: stretch;
}

/* Container query support for modern browsers */
@supports (container-type: inline-size) {
  .adaptive-card {
    container-type: inline-size;
  }
  
  @container (max-width: 400px) {
    .card-header h3 {
      font-size: 0.875rem;
    }
    
    .chart-container {
      min-height: 250px;
    }
  }
}

/* Development/Debug Utilities - Can be removed in production */

/* Visual debugging for adaptive cards */
.debug-layout .adaptive-card {
  border: 2px dashed rgba(255, 255, 0, 0.5) !important;
  position: relative;
}

.debug-layout .adaptive-card::before {
  content: attr(data-size) " - " attr(data-height);
  position: absolute;
  top: 2px;
  left: 2px;
  background: rgba(255, 255, 0, 0.9);
  color: black;
  padding: 2px 6px;
  font-size: 10px;
  font-family: monospace;
  z-index: 1000;
  border-radius: 2px;
}

.debug-layout .card-content {
  border: 1px dashed rgba(0, 255, 255, 0.5);
}

.debug-layout .chart-container {
  background: rgba(255, 0, 255, 0.1);
}

/* Grid debugging */
.debug-grid .grid-12-col {
  background-image: 
    repeating-linear-gradient(
      to right,
      rgba(255, 0, 0, 0.1) 0%,
      rgba(255, 0, 0, 0.1) calc(100% / 12),
      transparent calc(100% / 12),
      transparent calc(200% / 12)
    );
}

/* Responsive breakpoint indicator */
.debug-responsive::after {
  content: "Mobile";
  position: fixed;
  bottom: 10px;
  right: 10px;
  background: rgba(255, 255, 0, 0.9);
  color: black;
  padding: 4px 8px;
  font-size: 12px;
  font-family: monospace;
  z-index: 9999;
  border-radius: 4px;
}

@media (min-width: 768px) {
  .debug-responsive::after {
    content: "Tablet";
  }
}

@media (min-width: 1024px) {
  .debug-responsive::after {
    content: "Desktop";
  }
}

@media (min-width: 1536px) {
  .debug-responsive::after {
    content: "Large";
  }
}

@media (min-width: 1920px) {
  .debug-responsive::after {
    content: "Ultra-wide";
  }
}

/* Performance monitoring */
.debug-performance .adaptive-card {
  will-change: height;
}

.debug-performance .chart-container {
  will-change: transform;
}

/* Usage: Add these classes to body or specific containers to enable debugging
   Example: <body className="debug-layout debug-responsive">
*/

/* Additional Theme-Aware Utility Classes for Light Mode */

/* Light mode specific card variants */
.light .theme-card-white {
  background: #FFFFFF;
  color: #002F6C;
  border: 1px solid rgba(0, 47, 108, 0.1);
}

.light .theme-text-navy {
  color: #002F6C;
}

.light .theme-text-gray {
  color: #3A4757;
}

.light .theme-accent-blue {
  color: #0B4FA7;
}

.light .theme-bg-gradient {
  background: linear-gradient(135deg, #0A1B2A 0%, #002F6C 100%);
}

.light .theme-header-gradient {
  background: linear-gradient(135deg, #3C2E8F 0%, #2B2C7A 50%, #002F6C 100%);
}

/* Enhanced card shadows for light mode */
.light .theme-card-shadow {
  box-shadow: 0 4px 12px rgba(0, 47, 108, 0.08), 0 2px 4px rgba(0, 47, 108, 0.04);
}

.light .theme-card-shadow:hover {
  box-shadow: 0 8px 25px rgba(0, 47, 108, 0.12), 0 4px 8px rgba(0, 47, 108, 0.06);
  transform: translateY(-1px);
}

/* Gridline and secondary elements in light mode */
.light .theme-gridlines {
  stroke: #B3B3B3;
  fill: #B3B3B3;
}

.light .theme-secondary-info {
  color: #B3B3B3;
}

/* Chart specific styling for light mode */
.light .theme-chart-background {
  background: #FFFFFF;
}

.light .theme-chart-text {
  color: #002F6C;
}

.light .theme-chart-axis {
  color: #3A4757;
}

/* Status indicators for light mode */
.light .theme-status-safe {
  color: #00A859;
}

.light .theme-status-alert {
  color: #ED1C24;
}

.light .theme-status-warning {
  color: #F59E0B;
}

/* Interactive elements */
.light .theme-interactive:hover {
  background: linear-gradient(135deg, rgba(11, 79, 167, 0.03) 0%, rgba(0, 47, 108, 0.08) 100%);
  transition: all 0.3s ease-in-out;
}

/* Light Mode Card Text Overrides */
.light .theme-card-kpi {
  background: #FFFFFF;
  color: #002F6C; /* Dark text on white cards */
}

.light .theme-card-kpi .theme-text {
  color: #002F6C !important; /* Force dark text for numbers/titles in cards */
}

.light .theme-card-kpi .theme-text-secondary {
  color: #3A4757 !important; /* Force gray text for labels in cards */
}

.light .card h3 {
  color: #002F6C !important; /* Card headers should be dark */
}

.light .card .card-header {
  color: #002F6C !important; /* Card headers should be dark */
}

/* Main page text (outside cards) should remain white */
.light h1, .light h2, .light h3 {
  color: #FFFFFF !important; /* Page headers stay white on dark background */
}

.light .dashboard-row h1,
.light .dashboard-row h2 {
  color: #FFFFFF !important; /* Section headers stay white */
}

/* KPI/Badge Styles - Shared across both modes */
.kpi-badge,
.status-badge {
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: all 0.3s ease-in-out;
}

.kpi-badge.safe,
.status-badge.safe {
  background-color: #00A859; /* Green background */
  color: #FFFFFF; /* White text */
}

.kpi-badge.alert,
.status-badge.alert {
  background-color: #ED1C24; /* Red background */
  color: #FFFFFF; /* White text */
}

.kpi-badge.neutral,
.status-badge.neutral {
  background-color: #B3B3B3; /* Gray background */
  color: #002F6C; /* Navy text */
}

/* Help Icon Styles */
.help-icon {
  color: #B3B3B3; /* Default gray */
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  font-size: 1rem;
  width: 1.25rem;
  height: 1.25rem;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.help-icon:hover {
  color: #00A859; /* Green on hover */
  background-color: rgba(0, 168, 89, 0.1);
  transform: scale(1.1);
}

/* Chart Color Specifications */
.chart-bar,
.chart-line {
  stroke: #0B4FA7; /* Blue for bars/lines */
  fill: #0B4FA7;
}

.chart-threshold {
  stroke: #00A859; /* Green for thresholds */
  fill: #00A859;
}

.chart-breach {
  stroke: #ED1C24; /* Red markers only for breaches */
  fill: #ED1C24;
}

.chart-gridlines {
  stroke: #B3B3B3; /* Silver for gridlines */
  stroke-width: 0.5;
  opacity: 0.5;
}

/* Chart container hover effects */
.chart-container:hover {
  transform: translateY(-1px);
  transition: transform 0.2s ease-in-out;
}
