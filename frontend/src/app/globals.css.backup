@tailwind base;
@tailwind components;
@tailwind utilities;

/* Theme Transition System */
* {
  transition: background-color 0.3s ease-in-out, 
              border-color 0.3s ease-in-out, 
              color 0.3s ease-in-out,
              box-shadow 0.3s ease-in-out;
}

/* Root Theme Setup */
:root {
  /* Default Light Theme Variables - Background dark (navy gradient), cards light (white) */
  --theme-bg: linear-gradient(135deg, #0A1B2A 0%, #002F6C 100%);
  --theme-bg-secondary: #0A1B2A;
  --theme-card: #FFFFFF;
  --theme-card-kpi: #FFFFFF;
  --theme-text: #FFFFFF;
  --theme-text-secondary: #B3B3B3;
  --theme-text-accent: #002F6C;
  --theme-card-text: #002F6C;
  --theme-card-text-secondary: #4A4A4A;
  --theme-border: rgba(255, 255, 255, 0.1);
  --theme-accent: #0B4FA7;
  --theme-success: #00A859;
  --theme-warning: #F59E0B;
  --theme-danger: #ED1C24;
  --theme-silver: #B3B3B3;
  --theme-header-gradient: linear-gradient(135deg, #3C2E8F 0%, #2B2C7A 50%, #002F6C 100%);
}

/* Light Theme Override - Background dark (navy gradient), cards light (white) */
.light {
  --theme-bg: linear-gradient(135deg, #0A1B2A 0%, #002F6C 100%);
  --theme-bg-secondary: #0A1B2A;
  --theme-card: #FFFFFF;
  --theme-card-kpi: #FFFFFF;
  --theme-text: #FFFFFF;
  --theme-text-secondary: #B3B3B3;
  --theme-text-accent: #002F6C;
  --theme-card-text: #002F6C;
  --theme-card-text-secondary: #4A4A4A;
  --theme-border: rgba(255, 255, 255, 0.1);
  --theme-accent: #0B4FA7;
  --theme-success: #00A859;
  --theme-warning: #F59E0B;
  --theme-danger: #ED1C24;
  --theme-silver: #B3B3B3;
  --theme-header-gradient: linear-gradient(135deg, #3C2E8F 0%, #2B2C7A 50%, #002F6C 100%);
}

/* Dark Theme Override - Background light (white), cards dark (dark navy) */
.dark {
  --theme-bg: #FFFFFF;
  --theme-bg-secondary: #FFFFFF;
  --theme-card: #0E2F51;
  --theme-card-kpi: #0E2F51;
  --theme-text: #002F6C;
  --theme-text-secondary: #4A4A4A;
  --theme-text-accent: #FFFFFF;
  --theme-card-text: #FFFFFF;
  --theme-card-text-secondary: #B3B3B3;
  --theme-border: rgba(0, 47, 108, 0.1);
  --theme-accent: #0B4FA7;
  --theme-success: #00A859;
  --theme-warning: #F59E0B;
  --theme-danger: #ED1C24;
  --theme-silver: #B3B3B3;
  --theme-header-gradient: linear-gradient(135deg, #3C2E8F 0%, #2B2C7A 50%, #002F6C 100%);
}

/* Global Theme Application */
body {
  background: var(--theme-bg);
  color: var(--theme-text);
  min-height: 100vh;
  transition: all 0.3s ease-in-out;
}

/* Theme-Aware Components */
.theme-card {
  background: var(--theme-card);
  border: 1px solid var(--theme-border);
  color: var(--theme-text-accent);
}

.theme-card-kpi {
  background: var(--theme-card-kpi);
  border: 1px solid var(--theme-border);
  color: var(--theme-text);
}

.theme-text {
  color: var(--theme-text);
}

.theme-text-secondary {
  color: var(--theme-text-secondary);
}

.theme-border {
  border-color: var(--theme-border);
}

.theme-bg-secondary {
  background: var(--theme-bg-secondary);
}

/* DP World Brand Color Scheme - Updated for New Theme Specification */
.card { 
  background: var(--theme-card);
  border: 1px solid var(--theme-border);
  color: var(--theme-card-text);
  border-radius: 1rem;
  padding: 1.25rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease-in-out;
}

.card:hover {
  transform: translateY(-2px);
}

/* Light mode hover effects - Subtle blue-purple tint overlay, soft shadow, slight lift */
.light .card:hover {
  background: linear-gradient(135deg, rgba(11, 79, 167, 0.08) 0%, rgba(60, 46, 143, 0.05) 100%), var(--theme-card);
  box-shadow: 0 20px 30px -10px rgba(0, 47, 108, 0.15), 0 10px 15px -5px rgba(0, 47, 108, 0.1);
  transform: translateY(-2px);
}

/* Dark mode hover effects - Subtle gradient glow, stronger shadow, slight lift */
.dark .card:hover {
  background: linear-gradient(135deg, rgba(60, 46, 143, 0.1) 0%, rgba(11, 79, 167, 0.08) 100%), var(--theme-card);
  box-shadow: 0 20px 30px -10px rgba(60, 46, 143, 0.3), 0 10px 15px -5px rgba(60, 46, 143, 0.2);
  transform: translateY(-2px);
}

.card h3 { 
  color: var(--theme-card-text);
  font-size: 0.875rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
}

/* Theme-aware card components */
.card-header {
  color: var(--theme-card-text);
  font-size: 0.875rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
  flex-shrink: 0;
}

.card-body {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

/* Card-specific text colors for light mode - Dark navy titles, medium-dark gray labels */
.light .theme-card h1,
.light .theme-card h2,
.light .theme-card h3,
.light .theme-card h4,
.light .theme-card h5,
.light .theme-card h6,
