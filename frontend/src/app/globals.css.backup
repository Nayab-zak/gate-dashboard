}

.dark .theme-card .card-label,
.dark .theme-card .card-secondary,
.dark .theme-card .text-sm {
  color: #B3B3B3 !important;
}

.dark .theme-card-kpi h1,
.dark .theme-card-kpi h2,
.dark .theme-card-kpi h3,
.dark .theme-card-kpi h4,
.dark .theme-card-kpi h5,
.dark .theme-card-kpi h6,
.dark .theme-card-kpi .card-title,
.dark .theme-card-kpi .card-value,
.dark .theme-card-kpi .card-number {
  color: #FFFFFF !important;
}

.dark .theme-card-kpi .card-label,
.dark .theme-card-kpi .card-secondary,
.dark .theme-card-kpi .text-sm {
  color: #B3B3B3 !important;
}

/* Ensure all card content uses proper text colors in light mode */
.light .theme-card h1,
.light .theme-card h2, 
.light .theme-card h3,
.light .theme-card h4,
.light .theme-card h5,
.light .theme-card h6,
.light .theme-card-kpi h1,
.light .theme-card-kpi h2,
.light .theme-card-kpi h3,
.light .theme-card-kpi h4,
.light .theme-card-kpi h5,
.light .theme-card-kpi h6,
.light .card h1,
.light .card h2,
.light .card h3,
.light .card h4,
.light .card h5,
.light .card h6 {
  color: #002F6C !important;
}

.light .theme-card .text-4xl,
.light .theme-card-kpi .text-4xl,
.light .card .text-4xl {
  color: #002F6C !important;
}

.light .theme-card .text-sm,
