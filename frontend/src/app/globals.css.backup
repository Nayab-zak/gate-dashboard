}

.light .theme-card-kpi h1,
.light .theme-card-kpi h2,
.light .theme-card-kpi h3,
.light .theme-card-kpi h4,
.light .theme-card-kpi h5,
.light .theme-card-kpi h6,
.light .theme-card-kpi .card-title,
.light .theme-card-kpi .card-value,
.light .theme-card-kpi .card-number {
  color: #002F6C !important;
}

.light .theme-card-kpi .card-label,
.light .theme-card-kpi .card-secondary,
.light .theme-card-kpi .text-sm {
  color: #4A4A4A !important;
}

/* Card-specific text colors for dark mode - White titles, silver labels */
.dark .theme-card h1,
.dark .theme-card h2,
.dark .theme-card h3,
.dark .theme-card h4,
.dark .theme-card h5,
.dark .theme-card h6,
.dark .theme-card .card-title,
.dark .theme-card .card-value,
.dark .theme-card .card-number {
